<Window x:Class="ZooMap.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Вход в систему" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBox x:Name="txtUsername" Margin="0,5" Padding="10" 
                 Text="admin" FontSize="14"/>
        <PasswordBox x:Name="txtPassword" Margin="0,5" Padding="10" 
                     Password="admin123" FontSize="14"/>

        <Button Content="Войти" Click="BtnLogin_Click" Margin="0,10" 
                Padding="10" Background="LightBlue" FontSize="14"/>
        <TextBlock x:Name="tbMessage" Foreground="Red" Margin="0,5"/>
    </StackPanel>
</Window>