<Window x:Class="ZooMap.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">
    
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Text="Имя пользователя:" Margin="0,5"/>
        <TextBox x:Name="txtUsername" Margin="0,5" Padding="8" FontSize="14"/>
        
        <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
        <PasswordBox x:Name="txtPassword" Margin="0,5" Padding="8" FontSize="14"/>
        
        <TextBlock Text="Email:" Margin="0,10,0,5"/>
        <TextBox x:Name="txtEmail" Margin="0,5" Padding="8" FontSize="14"/>
        
        <Button Content="Зарегистрироваться" Click="BtnRegister_Click" 
                Margin="0,20" Padding="10" Background="LightGreen" FontSize="14"/>
        
        <TextBlock x:Name="tbMessage" Foreground="Red" Margin="0,10" TextWrapping="Wrap"/>
    </StackPanel>
</Window>