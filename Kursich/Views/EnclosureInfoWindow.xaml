<Window x:Class="ZooMap.EnclosureInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о вольере" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbTitle" Grid.Row="0" FontSize="18" FontWeight="Bold" Margin="0,10"/>

        <StackPanel Grid.Row="1" Margin="0,20">
            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <TextBox x:Name="txtDescription" Height="100" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                     Margin="0,5"/>

            <TextBlock Text="Тип животных:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="txtAnimalType" IsReadOnly="True" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnEdit" Content="Редактировать" Click="BtnEdit_Click" 
                    Margin="5" Padding="10" Visibility="Collapsed"/>
            <Button x:Name="btnSave" Content="Сохранить" Click="BtnSave_Click" 
                    Margin="5" Padding="10" Visibility="Collapsed"/>
            <Button Content="Закрыть" Click="BtnClose_Click" Margin="5" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>